@page
@model MyWebApp.Pages.NewBlogModel
@{
  ViewData["Title"] = "New Blog";
}

<form method="post" enctype="multipart/form-data" style="max-width: 500px; margin: 0 auto;">
  @Html.AntiForgeryToken() 
  
  <div style="margin-bottom: 10px;">
  <label for="Title" style="font-weight: bold;">Title:</label>
  <input type="text" id="Title" name="Title" required style="width: 100%; padding: 5px;">
  </div>
  <div style="margin-bottom: 10px;">
  <label for="Content" style="font-weight: bold;">Content:</label>
  <textarea id="Content" name="Content" required style="width: 100%; padding: 5px;"></textarea>
  </div>
  <div style="margin-bottom: 10px;">
  <label for="Image" style="font-weight: bold;">Image:</label>
  <input type="file" id="Image" name="Image" required style="width: 100%; padding: 5px;">
  </div>
  <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Post Blog</button>
</form>
